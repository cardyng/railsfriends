<div id="<%= dom_id friend %>" class="mt-4 p-5 bg-light text-black rounded">
  <h1>
    <%= friend.first_name %>
      <%= friend.last_name %>
  </h1>
  <hr class="hr" />

  <p>
    <strong>Email:</strong>
    <%= friend.email %>
  </p>

  <p>
    <strong>Phone:</strong>
    <%= friend.phone %>
  </p>

  <p>
    <strong>Twitter:</strong>
    <%= friend.twitter %>
  </p>
  <div>
    <%= link_to "Edit" , edit_friend_path(friend), class:"btn btn-primary" %>
      <%= link_to "Back" , friends_path, class:"btn btn-secondary"%>
        <%= button_to "Delete" , @friend, method: :delete, class:"btn btn-danger" %>
  </div>
</div>

<br>